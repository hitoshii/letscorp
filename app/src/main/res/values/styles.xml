<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.PostActivity" parent="AppTheme.NoActionBar">
        <!--<item name="android:windowBackground">@color/colorFuzzy</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.SearchActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="AppTheme.CommentActivity" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.ImageActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="FullscreenTheme" parent="AppTheme.NoActionBar">-->
    <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>-->
    <!--<item name="android:windowActionBarOverlay">true</item>-->
    <!--<item name="android:windowBackground">@null</item>-->
    <!--<item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>-->
    <!--<item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    <!--</style>-->

    <!--<style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">-->
    <!--<item name="android:background">@color/colorFuzzy</item>-->
    <!--</style>-->

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownVerticalOffset">16dp</item>
    </style>


    <style name="ListFontStyle" />

    <style name="ListFontStyle.Small">
        <item name="item_content_size">14sp</item>
        <item name="item_title_size">16sp</item>
        <item name="item_info_size">12sp</item>
    </style>

    <style name="ListFontStyle.Medium">
        <item name="item_content_size">16sp</item>
        <item name="item_title_size">22sp</item>
        <item name="item_info_size">14sp</item>
    </style>

    <style name="ListFontStyle.Large">
        <item name="item_content_size">18sp</item>
        <item name="item_title_size">24sp</item>
        <item name="item_info_size">16sp</item>
    </style>

    <style name="PostFontStyle" />

    <style name="PostFontStyle.Small">
        <item name="post_content_size">14sp</item>
        <item name="post_title_size">24sp</item>
        <item name="post_info_size">12sp</item>
        <item name="comment_primary_size">12sp</item>
        <item name="comment_secondary_size">10sp</item>
    </style>

    <style name="PostFontStyle.Medium">
        <item name="post_content_size">16sp</item>
        <item name="post_title_size">26sp</item>
        <item name="post_info_size">14sp</item>
        <item name="comment_primary_size">14sp</item>
        <item name="comment_secondary_size">12sp</item>
    </style>

    <style name="PostFontStyle.Large">
        <item name="post_content_size">18sp</item>
        <item name="post_title_size">28sp</item>
        <item name="post_info_size">16sp</item>
        <item name="comment_primary_size">16sp</item>
        <item name="comment_secondary_size">14sp</item>
    </style>

    <style name="ThemeStyle" />

    <style name="ThemeStyle.Light">
        <item name="list_background_color">@color/md_white_1000</item>
        <item name="card_background_color">@color/md_white_1000</item>
        <item name="post_title_color">#000</item>
        <item name="post_info_color">#666</item>
        <item name="post_background_color">#EEEEEE</item>
        <item name="android:textColor">#111</item>
        <item name="android:textColorSecondary">#333</item>
        <!--<item name="android:windowBackground">@color/md_white_1000</item>-->
    </style>

    <style name="ThemeStyle.Dark">
        <item name="list_background_color">#333</item>
        <item name="card_background_color">#666</item>
        <item name="colorPrimary">#333</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#FFAB00</item>
        <item name="post_title_color">#FFF</item>
        <item name="post_info_color">#CCC</item>
        <item name="post_background_color">#111111</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="android:panelFullBackground">@color/colorDarkBackground</item>
        <item name="android:itemBackground">@color/colorDarkBackground</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorSecondary">#DDD</item>
    </style>
</resources>
