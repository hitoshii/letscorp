<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/about.icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/about.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about.icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/about.version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about.title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/about.description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about.version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/app_description"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/about.social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about.description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/about.twitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_twitter_black" />

        <ImageView
            android:id="@+id/about.gplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/about.twitter"
            android:src="@mipmap/ic_gplus_black" />

        <ImageView
            android:id="@+id/about.github"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/about.gplus"
            android:src="@mipmap/ic_github_black" />

    </RelativeLayout>

</RelativeLayout>

