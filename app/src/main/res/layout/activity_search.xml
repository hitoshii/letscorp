<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="appbar">

        <org.wiky.letscorp.view.SearchBox
            android:id="@+id/search.search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <org.wiky.letscorp.view.SwipeRefreshLayout
        android:id="@+id/search.swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">

        <org.wiky.letscorp.list.SearchListView
            android:id="@+id/search.post_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </org.wiky.letscorp.view.SwipeRefreshLayout>


</RelativeLayout>