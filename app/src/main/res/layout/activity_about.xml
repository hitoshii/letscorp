<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.wiky.letscorp.activity.AboutActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/about.icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/about.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about.icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/about.description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about.title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/app_description"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/about.social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about.description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/about.twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/twitter_icon" />

            <ImageView
                android:id="@+id/about.gplus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/about.twitter"
                android:src="@mipmap/gplus_icon" />

            <ImageView
                android:id="@+id/about.github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/about.gplus"
                android:src="@mipmap/github_icon" />

        </RelativeLayout>


        <TextView
            android:id="@+id/about.power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Powered by http://m.letscorp.net" />

    </RelativeLayout>

</RelativeLayout>
